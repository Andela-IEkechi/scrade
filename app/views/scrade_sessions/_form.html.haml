= form_for @scrade_session do |f|
  - if @scrade_session.errors.any?
    #error_explanation
      %h2= "#{pluralize(@scrade_session.errors.count, "error")} prohibited this scrade_session from being saved:"
      %ul
        - @scrade_session.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :from
    = f.date_select :from
  .field
    = f.label :to
    = f.date_select :to
  .actions
    = f.submit 'Save'
