= form_for @scrade_term do |f|
  - if @scrade_term.errors.any?
    #error_explanation
      %h2= "#{pluralize(@scrade_term.errors.count, "error")} prohibited this scrade_term from being saved:"
      %ul
        - @scrade_term.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :scrade_session
    = f.text_field :scrade_session
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :from
    = f.date_select :from
  .field
    = f.label :to
    = f.date_select :to
  .actions
    = f.submit 'Save'
